<Window x:Class="MessengerUIDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerUIDesign"
        mc:Ignorable="d"
        Title="UatzAp" Height="490" Width="450" ResizeMode="NoResize">
    <Grid Background="#2A3132">
        <Menu DockPanel.Dock="Top" Margin="0,10,0,415" Background="#336B87">
            <MenuItem Header="_Show Participants" Click="mnuShowParticipants_Click"/>
            <MenuItem Header="_Quit Chat" Click="mnu_QuitChat_Click"/>
        </Menu>
        <TextBox x:Name="txtChat" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Width="380" Height="330" Background="#90AFC5"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Margin="35,398,0,0" VerticalAlignment="Top" Width="295" Height="41" Background="#90AFC5"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="335,398,0,0" VerticalAlignment="Top" Height="41" Width="80" Click="btnSend_Click" Background="#336B87"/>
    </Grid>
</Window>